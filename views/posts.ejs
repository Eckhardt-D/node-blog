<style>
.post-snippet {
  height: 200px;
  overflow: hidden;
}
</style>

<div class="row mt-5">
  <div class="col-md-10 m-auto">
    <div class="card card-body mt-5">
      <h1>All Posts</h1>
      <% posts.map(post => { %>
        <div class="card card-body mt-3">
          <h1 class="mb-0">
            <%=post.title%>
          </h1>
          <div class="fr-view post-snippet">
            <%- post.body %>
          </div>
          <p class="mb-2 mt-0"><small>by <%=post.author %></small></p>
          <div class="row">
            <a class="btn btn-sm btn-success ml-3" href="/posts/<%= post.id %>">Read More</a>            
            <a class="btn btn-sm btn-warning ml-3" href="/posts/edit/<%= post.id %>">Edit Post</a>            
          </div>
        </div>
      <% }) %>
      <a class="btn btn-secondary mt-3" href="/">Go Home</a>
      <a class="btn btn-secondary mt-3" href="/posts/new">Create New Post</a>
    </div>
  </div>
</div>